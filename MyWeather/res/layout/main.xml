<?xml version="1.0" encoding="UTF-8"?>
<ScrollView android:id="@+id/weather_query_scr"
 android:orientation="vertical" android:layout_width="fill_parent"
 android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout android:layout_gravity="right"
              xmlns:android="http://schemas.android.com/apk/res/android" 
              android:layout_width="wrap_content" 
              android:layout_height="fill_parent" android:orientation="vertical">
   <LinearLayout android:id="@+id/linearLayout1" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:orientation="horizontal" android:layout_gravity="right">
            <LinearLayout android:id="@+id/linearLayout1" 
            android:layout_width="wrap_content" 
            android:layout_height="fill_parent" 
            android:orientation="vertical">
                <TextView  
                android:textSize="30dip"
                android:id="@+id/cityname" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"></TextView>
                <TextView  
                android:textSize="10dip"
                android:id="@+id/releasetime" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"></TextView>
                <TextView  
                android:id="@+id/update" 
                android:layout_width="wrap_content" 
                 android:textSize="20dip"
                android:layout_height="wrap_content"></TextView>
                <TextView 
                 android:id="@+id/qiwen" 
                   android:textSize="20dip"
                 android:layout_width="wrap_content" 
                 android:layout_height="wrap_content"></TextView>
                <TextView 
                android:id="@+id/fengli" 
                  android:textSize="20dip"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"></TextView>
                <TextView  
                android:id="@+id/tianqi" 
                  android:textSize="20dip"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"></TextView>
                <TextView 
                android:id="@+id/shushidu" 
                  android:textSize="20dip"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"></TextView>
            </LinearLayout>
             <LinearLayout android:id="@+id/linearLayout1" 
            android:layout_height="fill_parent" 
            android:orientation="vertical"  
             android:layout_width="wrap_content">
             <ImageView  
             android:id="@+id/iamge" 
             android:layout_width="wrap_content" 
             android:layout_height="wrap_content"/>
              <TextView  
              android:id="@+id/curntime" 
               android:textSize="20dip"
              android:layout_width="wrap_content" 
              android:layout_height="wrap_content"></TextView>
                <TextView  android:id="@+id/week" 
                android:layout_width="wrap_content" 
                 android:textSize="20dip"
               
                android:layout_height="wrap_content"></TextView>
            </LinearLayout>
            </LinearLayout>
              <LinearLayout android:id="@+id/linearLayout1" 
            android:layout_width="match_parent" 
            android:layout_height="match_parent" 
            android:orientation="horizontal" android:layout_gravity="right">
            </LinearLayout>
             <LinearLayout android:id="@+id/linearLayout1" 
            android:layout_gravity="right" 
            android:gravity="right" 
            android:orientation="horizontal" 
            android:baselineAligned="false" 
            android:layout_width="match_parent" 
            android:layout_height="match_parent">
		 </LinearLayout>
           <LinearLayout android:id="@+id/linearLayout1" 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content"  
            android:orientation="horizontal" android:layout_gravity="right">
            </LinearLayout>   
         <Button   
     android:id="@+id/shezhi_button"
     android:background="@drawable/wp_button"
